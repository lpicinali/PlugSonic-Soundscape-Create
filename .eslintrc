{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "browser": true
  },
  "settings": {
    "import/resolver": "webpack"
  },
  "rules": {
    "import/extensions": 0,
    "import/prefer-default-export": 0,
    "no-alert": 0,
    "no-console": 0,
    "no-lonely-if": 0,
    "no-param-reassign": 0,
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "no-restricted-globals": 0,
    "no-unused-expressions": 0,
    "no-unused-vars": 0,
    "object-shorthand": 0,
    "react/default-props-match-prop-types": [1, { "allowRequiredDefaults": 1 }],
    "react/forbid-prop-types": 0,
    "react/jsx-filename-extension": 0,
    "react/no-unused-prop-types": 0,
    "react/prefer-stateless-function": 0,
  }
}
